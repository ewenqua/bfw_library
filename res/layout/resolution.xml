<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/ap_flags_respop_width"
        />
    
    <EditText
        android:id="@+id/res_edt_w"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
		android:hint="@string/ap_flags_respop_width"
        android:inputType="number"
        />

	<TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/ap_flags_respop_height"
        />
    
    <EditText
        android:id="@+id/res_edt_h"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
		android:hint="@string/ap_flags_respop_height"
        android:inputType="number"
        />
    
</LinearLayout>
